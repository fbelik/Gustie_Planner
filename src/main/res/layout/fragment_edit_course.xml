<!--            android:textOn="@string/pm" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp">

        <ToggleButton
            android:id="@+id/course_monday_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:textOff="@string/monday_btn"
            android:textOn="@string/monday_btn" />

        <ToggleButton
            android:id="@+id/course_tuesday_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:textOff="@string/tuesday_btn"
            android:textOn="@string/tuesday_btn" />

        <ToggleButton
            android:id="@+id/course_wednesday_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:textOff="@string/wednesday_btn"
            android:textOn="@string/wednesday_btn" />

        <ToggleButton
            android:id="@+id/course_thursday_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:textOff="@string/thursday_btn"
            android:textOn="@string/thursday_btn" />

        <ToggleButton
            android:id="@+id/course_friday_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/style_toggle_button"
            android:textOff="@string/friday_btn"
            android:textOn="@string/friday_btn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/course_color_select_button"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button"
            android:textColor="?attr/buttonTextColor"
            android:text="@string/choose_course_color" />

        <Button
            android:id="@+id/course_color_look_button"
            android:layout_width="50dp"
            android:layout_marginStart="20dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/standard_button"
        android:textColor="?attr/buttonTextColor"
        android:text="@string/submit_btn" />

</LinearLayout>